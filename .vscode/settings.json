{
    // --- General ---
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.trimAutoWhitespace": true,
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "explorer.confirmDelete": false,
    "explorer.excludeGitIgnore": true,
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "git.openRepositoryInParentFolders": "always",
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/vendor": true
    },

    "files.associations": {
        "*.inc": "php",
        "*.module": "php",
        "*.install": "php",
        "*.theme": "php"
    },
    "intelephense.files.associations": ["**/*.inc", "**/*.module", "**/*.install", "**/*.theme"],

    // --- Formatting ---
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[postcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[less]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[handlebars]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[graphql]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },

    "editor.formatOnSave": true,
    "prettier.requireConfig": true,

    // --- Linting on save (auto-fix) ---
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always",
        "source.fixAll.stylelint": "always"
    },

    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "graphql"
    ],

    // --- Todo Tree ---
    "todo-tree.regex.regex": "(//|#)\\s*(?P<tag>TODO|DEBUG|GOTO|Section)\\b[:\\s]*(?P<message>.*)",
    "todo-tree.general.tags": ["TODO", "DEBUG", "GOTO", "Section"],
    "todo-tree.highlights.customHighlight": {
        "DEBUG": {
            "icon": "bug",
            "foreground": "#ff5555",
            "type": "text"
        },
        "GOTO": {
            "icon": "arrow-right",
            "foreground": "#61dafb",
            "type": "text"
        },
        "Section": {
            "icon": "book",
            "foreground": "#a9dc76",
            "type": "text"
        }
    },

    // --- PHP ---
    "php.validate.executablePath": "/opt/homebrew/bin/php",
    "intelephense.environment.phpVersion": "8.1.0",
    "intelephense.format.enable": false,
    "intelephense.files.exclude": ["**/.php-cs-fixer.php", "**/vendor/**", "**/node_modules/**"],
    "php-cs-fixer.executablePath": "/opt/homebrew/bin/php-cs-fixer",
    "phpmd.rules": "${workspaceFolder}/phpmd.xml",

    // --- JavaScript / HTML / CSS ---
    "eslint.enable": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 2,
    "html-css-class-completion.enableEmmetSupport": true,

    // --- Java ---
    "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",

    // --- Ruby ---
    "solargraph.diagnostics": true,

    // --- Markdown ---
    "markdownlint.config": {
        "default": true,
        "MD013": false
    },

    // --- GitLens ---
    "gitlens.hovers.enabled": true,
    "gitlens.codeLens.enabled": true,

    // --- Misc ---
    "better-comments.highlightPlainText": true,
    "spellright.language": ["en"],
    "spellright.documentTypes": ["markdown", "plaintext", "javascript", "php"],

    // --- Terminal ---
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "MesloLGS NF"
}
